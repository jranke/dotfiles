# vim: ft=gitconfig
[user]
	name = Ranke Johannes
	email = johannes.ranke@agroscope.admin.ch
[core]
	editor = nvim
[config]
	editor = /usr/bin/nvim
[push]
  default = simple
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[difftool]
	prompt = false
[difftool "rda_diff"]
  cmd = ~/bin/rda_diff $LOCAL $REMOTE
[difftool "rda_diff_inf"]
  cmd = ~/bin/rda_diff -m Inf $LOCAL $REMOTE
[merge]
  tool = vimdiff
[init]
	defaultBranch = main
[pull]
	ff = only
[fetch]
	prune = true
