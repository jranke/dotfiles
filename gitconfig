[difftool "rda_diff"]
  cmd = ~/bin/rda_diff $LOCAL $REMOTE
[difftool "rda_diff_inf"]
  cmd = ~/bin/rda_diff -m Inf $LOCAL $REMOTE
[merge]
  tool = vimdiff
